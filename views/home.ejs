<html>

<head>
  <title>To Do List</title>
  <script src="https://kit.fontawesome.com/997cc280fa.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="./css/bootstrap-clockpicker.min.css">
  <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
  <link rel="stylesheet" type="text/css" href="./css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
</head>

<body>
  <div class="container">
    <div class="row mt-5">
      <div class="col">
        <h1 style="text-align: center"><i class="fas fa-th-list"></i> To Do List</h1>
        <form action="create-list" method="POST">
          <label for="description">Description</label>
          <input type="text" placeholder="What do you need to do?" name="description" required id="description"><br>
          <label for="dropdown">Select Interviewee</label>
          <select id="dropdown" name="pid" multiple>
            <% for(let i of participants) {%>
            <option value="<%= i._id %>"><%= i.name %></option>
            <%}%>
          </select><br>
          <label for="date">Date</label>
          <input type="date" name="date" required id="date">
          <br><br>
          <label for="start-time">Start Time</label>
          <label for="end-time">End Time</label>
          <div class="form-row">
            <div class="input-group clockpicker col" data-autoclose="true">
              <input type="time" class="form-control" value="09:30" name="start_time" id="start-time">
            </div>
            <div class="input-group clockpicker col" data-autoclose="true">
              <input type="time" class="form-control" value="09:30" name="end_time" id="end-time">
            </div>
          </div>
          <button type="submit" id="add-task"><i class="fas fa-plus"></i> Add Task</button>
          <button type="button" id="delete-task" onclick="deleteTask()"><i class="fas fa-trash-alt"></i> Delete</button>
        </form>
      </div>
      <div class="col">
        <div id="list-container">
          <form action="/delete" method="POST" id="delete-form">
            <% for(let i of list){ %>
            <div class="list_item">
              <input type="checkbox" value="<%= i._id %>" name="check<%= i._id %>" class="checks">
              <button type="button" class="btn btn-info" style="position: absolute;right: 5px;">Edit</button>
              <p>
              <div>
                <h2><%= i.description %></h2>
              </div>
              <div style="margin-bottom: 5px;">
                <dl>
                  <dt><i class="fas fa-user-clock"></i></dt>
                  <% for(let j of i.participants){ %>
                  <dd><%= j.name %></dd>
                  <% } %>
                  <dt><i class="fas fa-phone"></i></dt>
                  <% for(let j of i.participants){ %>
                  <dd><%= j.phone %></dd>
                  <% } %>
                  <dt><i class="fas fa-envelope-open-text"></i></dt>
                  <% for(let j of i.participants){ %>
                  <dd><%= j.email %></dd>
                  <% } %>
                </dl>
              </div>
              <div style="position: absolute;right: 5px; bottom: 100px;">
                <i class="far fa-calendar-alt"></i>
                <p class="mt-3">Start :<%= i.startTime %></p>
                <p style="padding-top: 5px;">End :<%= i.endTime %></p>
              </div>
              </p>
            </div>
            <% } %>
        </form>
      </div>
    </div>
  </div>
  </div>
</body>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
  integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
  integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
  integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
<script type="text/javascript" src="./js/bootstrap-clockpicker.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
<script>
  $('.clockpicker').clockpicker();
  $('#dropdown').select2({
    closeOnSelect: false
  });
  function deleteTask() {
    let form =  $('#delete-form');
    form.submit();
  }
</script>
<script>
  <% if (flash.success && flash.success.length > 0) {%>
    new Noty({
      theme: 'relax',
      text: "<%= flash.success %>",
      type: 'success',
      layout: 'topRight',
      timeout: 1500

    }).show();    
  <%} %>

  <% if (flash.error && flash.error.length > 0) {%>
    new Noty({
      theme: 'relax',
      text: "<%= flash.error %>",
      type: 'error',
      layout: 'topRight',
      timeout: 1500

    }).show();    
  <%} %>
</script>

</html>